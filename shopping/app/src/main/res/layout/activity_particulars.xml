<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shopping.example.sd.shopping.ParticularsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/return_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＜"
                android:textSize="30sp" />

            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/spxq_banner"
                android:layout_width="350dp"
                android:layout_height="300dp"
                isClipChildrenMode="true"
                android:layout_centerHorizontal="true"
                pageChangeDuration="1000"
                android:layout_below="@id/return_btn" />

            <RelativeLayout
                android:id="@+id/l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spxq_banner"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/spxq_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:text="159"
                    android:textColor="#f00"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/spxq_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:text="已售"
                    android:textSize="25sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/spxq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/l"
                android:layout_margin="10dp"
                android:textSize="25sp" />

            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spxq"></WebView>
        </RelativeLayout>
    </ScrollView>

    <ImageView
    android:id="@+id/dstails_buy"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="30dp"
    android:src="@drawable/dstails_buy" />
    <ImageView
        android:id="@+id/dstails_add"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/dstails_add"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
